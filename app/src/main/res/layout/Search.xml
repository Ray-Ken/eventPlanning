<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Search">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchField"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/searchBut"
        android:text="Sample Search"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search"
        android:id="@+id/searchBut"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/searchresults"
        android:layout_alignEnd="@+id/searchresults"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchresults"
        android:layout_below="@+id/searchBut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_above="@+id/searchresults"
        android:layout_alignLeft="@+id/searchBut"
        android:layout_alignStart="@+id/searchBut"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:onClick="searchFilter" />

</RelativeLayout>