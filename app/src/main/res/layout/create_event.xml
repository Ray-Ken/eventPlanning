<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create a New Event"
        android:id="@+id/headerText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center"/>

    <Space
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:layout_below="@+id/headerText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Event Private:"
        android:id="@+id/switch1"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Me Of New Arrivals:"
        android:id="@+id/switch2"
        android:layout_below="@+id/space"
        android:layout_alignParentRight="true"
         />

    <Space
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_below="@id/switch1"
        android:layout_alignParentLeft="true"
        android:id="@+id/space2"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space2"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/eventTitle"
            android:layout_gravity="center_horizontal"
            android:hint="What?"
            android:gravity="center"
            android:singleLine="true"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/space3"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/eventDesc"
            android:layout_gravity="center_horizontal"
            android:hint="Event Description"
            android:maxLines="2"
            android:gravity="center"/>

    </LinearLayout>
    <Space
        android:layout_width="500dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/linearLayout"
        android:id="@+id/space3"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Event Image"
        android:id="@+id/imageUpload"
        android:layout_above="@+id/space4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/space4"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_below="@+id/space3"
        android:layout_above="@id/imageUpload"
        android:layout_alignParentLeft="true"
        android:src="@drawable/generic_party_image"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Location"
        android:id="@+id/setLocation"
        android:layout_alignParentRight="true"
        android:layout_above="@id/space4"
        android:onClick="setLocation"
        />

</RelativeLayout>